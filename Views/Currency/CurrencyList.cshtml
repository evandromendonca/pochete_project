@model IEnumerable<Pochete.Models.Currency>

@{
    ViewData["Title"] = "Currency List";
}

<br/>

@Html.Partial("PartialNavbar")

<p>
    <a class="btn btn-custom" asp-action="Create">Create new currency</a>
</p>

<div class="row">
    <div class="col-md-7">
        <div class="table-responsive">          
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Code) </th>
                        <th> @Html.DisplayNameFor(model => model.Name) </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var currency in Model)
                    {
                        <tr>
                            <td> @Html.DisplayFor(modelItem => currency.Code) </td>
                            <td> @Html.DisplayFor(modelItem => currency.Name) </td>
                            <td>
                                <div class="btn-group btn-group-xs">
                                    <a class="btn btn-default" asp-action="CurrencyRates" asp-route-id="@currency.Id">See rates</a>
                                    <a class="btn btn-default" asp-action="Edit" asp-route-id="@currency.Id">Edit</a>
                                    <a class="btn btn-default" asp-action="Delete" asp-route-id="@currency.Id">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-5">

    </div>
</div>